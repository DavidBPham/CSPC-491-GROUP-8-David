{
  "version": 2,
  "builds": [
    {
      "src": "Server/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "Client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "Server/index.js"
    },
    {
      "src": "/static/(.*)",
      "dest": "Client/build/static/$1"
    },
    {
      "src": "/(.*\\..+)",
      "dest": "Client/build/$1"
    },
    {
      "src": "/(.*)",
      "dest": "Client/build/index.html"
    }
  ]
}